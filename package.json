{
  "name": "reactron",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "build/main.js",
  "build": {
    "extends": null,
    "appId": "reactron.boilerplate",
    "productName": "Reactron",
    "win": {
      "target": "nsis"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "!build/_debug/**/*"
    ],
    "directories": {
      "buildResources": "resources"
    }
  },
  "scripts": {
    "app:start": "webpack-dev-server --config config/webpack.config.app.dev.js",
    "app:build": "webpack --config config/webpack.config.app.prod.js",
    "main:start": "concurrently \"npm run-script main:build-dev\" \"cross-env NODE_ENV=dev nodemon --exec \"\"wait-on http://localhost:8080 && electron build/main.js\"\"",
    "main:build-dev": "webpack --config config/webpack.config.main.dev.js -w",
    "main:build": "webpack --config config/webpack.config.main.prod.js",
    "renderer:build": "webpack --config config/webpack.config.renderer.prod.js",
    "start": "concurrently \"npm run-script app:start\" \"npm run-script main:start\"",
    "build": "concurrently \"npm run-script app:build\" \"npm run-script main:build\"",
    "dist": "npm run-script build && electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@svgr/webpack": "^5.1.0",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/uuid": "^3.4.7",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "electron": "^7.1.11",
    "electron-builder": "^22.3.2",
    "file-loader": "^5.0.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "typescript": "^3.7.5",
    "wait-on": "^4.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  }
}
