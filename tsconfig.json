{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "reactron": ["reactron/index.ts"],
      "@clients/*": ["reactron/clients/*"],
      "@components/*": ["reactron/components/*"],
      "@constants/*": ["reactron/constants/*"],
      "@lib/*": ["reactron/lib/*"],
      "@main/*": ["reactron/main/*"],
      "@renderer/*": ["reactron/renderer/*"],
      "@state/*": ["reactron/state/*"],

      "~types/*": ["shared/types/*"],

      "shared/*": ["shared/*"],
      "windows/*": ["windows/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
