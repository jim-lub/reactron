{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "reactron": ["internals/index.ts"],
      "@assets/*": ["internals/assets/*"],
      "@clients/*": ["internals/clients/*"],
      "@components/*": ["internals/components/*"],
      "@constants/*": ["internals/constants/*"],
      "@lib/*": ["internals/lib/*"],
      "@main/*": ["internals/main/*"],
      "@renderer/*": ["internals/renderer/*"],
      "@state/*": ["internals/state/*"],

      "~types/*": ["shared/types/*"],

      "shared/*": ["shared/*"],
      "containers/*": ["containers/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
